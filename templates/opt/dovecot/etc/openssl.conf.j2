[ req ]
default_bits = 2048
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type
prompt = no

[ req_dn ]
# country (2 letter code)
C={{ dovecot.config.certificate.country }}

# State or Province Name (full name)
ST={{ dovecot.config.certificate.state }}

# Locality Name (eg. city)
L={{ dovecot.config.certificate.city }}

# Organization (eg. company)
O={{ dovecot.config.certificate.organization }}

# Organizational Unit Name (eg. section)
OU={{ dovecot.config.certificate.section }}

# Common Name (*.example.com is also possible)
CN={{ dovecot.config.certificate.commonname }}

# E-mail contact
emailAddress={{ dovecot.config.certificate.email }}

[ cert_type ]
nsCertType = server
